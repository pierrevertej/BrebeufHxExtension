{
  "manifest_version": 3,
  "name": "AI Fact-Check Meter",
  "version": "1.0",
  "description": "Analyse claims using multiple AI models with an inaccuracy gauge.",
  "permissions": ["storage", "contextMenus"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}