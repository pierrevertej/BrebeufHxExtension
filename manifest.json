{
  "manifest_version": 3,
  "name": "Text Fact-Checker",
  "version": "1.0",
  "description": "Checks if highlighted text is true or misinforming.",
  "permissions": ["storage", "contextMenus", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
